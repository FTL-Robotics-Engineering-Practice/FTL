import matplotlib.pyplot as plt

def plot_robot_path(robot):
    """–†–∏—Å—É–µ—Ç –≥—Ä–∞—Ñ–∏–∫ –ø—É—Ç–∏ —Ä–æ–±–æ—Ç–∞"""
    if not robot.history:
        print("–ò—Å—Ç–æ—Ä–∏—è –ø—É—Å—Ç–∞!")
        return

    x_coords = [pos[0] for pos in robot.history]
    y_coords = [pos[1] for pos in robot.history]

    plt.figure(figsize=(8, 6))
    plt.plot(x_coords, y_coords, 'b-o')
    plt.title(f"–ü—É—Ç—å —Ä–æ–±–æ—Ç–∞ {robot.name}")
    plt.grid(True)
    plt.xlabel("X –∫–æ–æ—Ä–¥–∏–Ω–∞—Ç–∞")
    plt.ylabel("Y –∫–æ–æ—Ä–¥–∏–Ω–∞—Ç–∞")
    plt.show()


