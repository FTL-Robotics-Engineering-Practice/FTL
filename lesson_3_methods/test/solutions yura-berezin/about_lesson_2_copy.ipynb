class Robot:
    def __init__(self, name, x=0, y=0):
        self.name = name
        self.x = x
        self.y = y
        self.history = [(x, y)]  # —Å–æ—Ö—Ä–∞–Ω—è–µ–º —Å—Ç–∞—Ä—Ç–æ–≤—É—é –ø–æ–∑–∏—Ü–∏—é

    def command(self, cmd):
        """–í—ã–ø–æ–ª–Ω—è–µ—Ç –∫–æ–º–∞–Ω–¥—É: 'up', 'down', 'left', 'right'"""
        if cmd == "up":
            self.y += 1
        elif cmd == "down":
            self.y -= 1
        elif cmd == "left":
            self.x -= 1
        elif cmd == "right":
            self.x += 1
        else:
            print(f"–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–∞—è –∫–æ–º–∞–Ω–¥–∞: {cmd}")
            return
        self.history.append((self.x, self.y))  # —Ñ–∏–∫—Å–∏—Ä—É–µ–º –Ω–æ–≤—É—é –ø–æ–∑–∏—Ü–∏—é

    def show_history(self):
        """–ü–æ–∫–∞–∑—ã–≤–∞–µ—Ç –≤—Å—é –∏—Å—Ç–æ—Ä–∏—é –¥–≤–∏–∂–µ–Ω–∏—è"""
        print("–ò—Å—Ç–æ—Ä–∏—è —à–∞–≥–æ–≤:")
        for step in self.history:
            print(step)
            
